<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_workflow_wizard_form" model="ir.ui.view">
        <field name="name">account.move.workflow.wizard.form</field>
        <field name="model">account.move.workflow.wizard</field>
        <field name="arch" type="xml">
            <form string="Ejecutar Flujo de Trabajo Contable">
                <sheet>
                    <group>
                        <field name="workflow_id" options="{'no_create': True}"
                               domain="[('company_id', '=', company_id), ('active', '=', True)]"/>
                        <field name="company_id" invisible="1"/>
                    </group>
                    
                    <group modifiers ="{'invisible': [('workflow_id', '=', False)]}">
                        <group>
                            <field name="partner_id" 
                                   modifiers ="{'required': [('require_partner', '=', True)], 
                                           'invisible': [('workflow_id', '=', False)]}" 
                                   options="{'no_create': True}"/>
                            <field name="require_partner" invisible="1"/>
                            <field name="date" required="1"/>
                            <field name="journal_id" 
                                   modifiers ="{'invisible': [('workflow_id', '=', False)]}" 
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="amount" 
                                   modifiers ="{'required': [('require_amount', '=', True)], 
                                           'invisible': [('workflow_id', '=', False)]}"/>
                            <field name="require_amount" invisible="1"/>
                            <field name="currency_id" 
                                   modifiers ="{'invisible': [('workflow_id', '=', False)]}" 
                                   options="{'no_create': True}"/>
                            <field name="reference" placeholder="Referencia opcional"/>
                        </group>
                    </group>
                    
                    <notebook modifiers ="{'invisible': [('workflow_id', '=', False)]}">
                        <page string="Plantillas a ejecutar">
                            <field name="template_preview_ids" readonly="1">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="template_id"/>
                                    <field name="condition"/>
                                    <field name="will_execute"/>
                                    <field name="state" widget="badge" 
                                           decoration-success="state == 'valid'" 
                                           decoration-danger="state == 'error'" 
                                           decoration-info="state == 'pending'"/>
                                    <field name="error_message" modifiers ="{'invisible': [('state', '!=', 'error')]}"/>
                                </list>
                            </field>
                        </page>
                    
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Action para abrir el wizard desde el menÃº -->
    <record id="action_run_workflow" model="ir.actions.act_window">
        <field name="name">Execute Accounting Workflow</field>
        <field name="res_model">account.move.workflow.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <!-- Action para abrir el wizard desde un asiento contable -->
    <record id="action_account_move_workflow_wizard_from_move" model="ir.actions.act_window">
        <field name="name">Ejecutar Flujo de Trabajo</field>
        <field name="res_model">account.move.workflow.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_move_id': active_id}</field>
    </record>
    
</odoo>